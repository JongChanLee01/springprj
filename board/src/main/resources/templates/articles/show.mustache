{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <th>{{article.id}}</th>
            <td>{{article.title}}</td>
            <td>{{article.content}}</td>
        </tr>
    </tbody>
</table>

<!--수정 버튼 추가-->
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">수정</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger" onclick="return delOk();">삭제</a>
<a href="/articles" class="btn btn-success">목록보기</a>

{{>comments/_comments}}

{{>layouts/footer}}

<script>
    function delOk(){
        var delOk=confirm("정말로 삭제하시겠습니까?");
        if(delOk){
            return true; // 다음 단계로 진행
        } else{
            return false; // 진행 X
        }
    }
</script>